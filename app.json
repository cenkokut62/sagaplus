{
  "expo": {
    "name": "SagaPlus",
    "slug": "sagaplus",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "sagaplus",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sagaplus.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Saha operasyonlarını yönetmek ve yakındaki müşterileri görüntülemek için konumunuza ihtiyacımız var.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Saha operasyonlarını yönetmek ve yakındaki müşterileri görüntülemek için konumunuza ihtiyacımız var.",
        "NSCalendarsUsageDescription": "Randevularınızı takviminize kaydedebilmek için takvim erişimine izin vermelisiniz.",
        "NSPhotoLibraryUsageDescription": "Raporlara fotoğraf eklemek için galeriye erişim izni gereklidir.",
        "NSMicrophoneUsageDescription": "Ziyaret notlarını sesle girmek için mikrofon izni gereklidir.",
        "NSSpeechRecognitionUsageDescription": "Söylediklerinizi metne çevirmek için ses tanıma izni gereklidir."
      }
    },
    "android": {
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.sagaplus.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.NOTIFICATIONS",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.READ_CALENDAR",
        "android.permission.WRITE_CALENDAR",
        "android.permission.INTERNET"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyCTpNEVajf42oMr7W_XRiFDKbNh2G57Oe0"
        }
      }
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      "expo-localization",
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to use the microphone.",
          "speechRecognitionPermission": "Allow $(PRODUCT_NAME) to use speech recognition.",
          "androidSpeechServicePackages": ["com.google.android.googlequicksearchbox"]
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Profil fotoğrafı ve rapor görselleri yüklemek için galeriye erişim izni gereklidir."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#0b9bd6",
          "defaultChannel": "default"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Saha operasyonlarını yönetmek ve yakındaki müşterileri görüntülemek için konumunuza ihtiyacımız var."
        }
      ],
      [
        "expo-calendar",
        {
          "calendarPermission": "Randevularınızı takvime işlemek için izin gereklidir."
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "d43cd589-3d9c-4421-a41a-65b25d8d251b"
      }
    },
    "runtimeVersion": "1.0.0",
    "updates": {
      "url": "https://u.expo.dev/d43cd589-3d9c-4421-a41a-65b25d8d251b"
    }
  }
}